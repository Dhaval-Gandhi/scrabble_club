<%= content_for :header do %>
  <h1>Leader Board</h1>
<% end %>

<% if @top10.blank? %>
  <p>Does not have any users having more than 10 matches</p>
<% else %>
  <table>
    <tr>
      <td><strong>Rank</strong></td>
      <td><strong>Member Name</strong></td>
      <td><strong>Average Score</strong></td>
    </tr>
    <% @top10.each_with_index do |member, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= member[:name] %></td>
        <td><%= member[:avg_score] %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<hr>