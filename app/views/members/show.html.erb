<%= content_for :header do %>
  <h1>Member Details</h1>
<% end %>

<table>
  <tr>
    <td>
      <strong>Name : </strong>
    </td>
    <td>
      <%= @member.name %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Email : </strong>
    </td>
    <td>
      <%= @member.email %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Contact : </strong>
    </td>
    <td>
      <%= @member.contact %>
    </td>
  </tr>
</table>
<hr>
<% if @member.game_count.zero? %>
  <table>
    <tr>
      <td>
        <strong>Participated game count : </strong>
      </td>
      <td>
        0
      </td>
    </tr>
  </table>
<% else %>
  <table>
    <tr>
      <td>
        <strong>Participated game count : </strong>
      </td>
      <td>
        <%= @member.game_count %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Number of game wins : </strong>
      </td>
      <td>
        <%= @member.winning_games_count %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Number of game losses : </strong>
      </td>
      <td>
        <%= @member.loseing_games_count %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Average game score : </strong>
      </td>
      <td>
        <%= @member.avrage_score %>
      </td>
    </tr>
  </table>
  <hr>

  <table>
    <tr>
      <td>
        <strong>Highest score : </strong>
      </td>
      <td>
        <%= @rank_details[:highest_score] %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Game code : </strong>
      </td>
      <td>
        <%= @rank_details[:game_code] %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Game date : </strong>
      </td>
      <td>
        <%= @rank_details[:game_time] %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Game against : </strong>
      </td>
      <td>
        <%= @rank_details[:another_player] %>
      </td>
    </tr>
  </table>

<% end %>
